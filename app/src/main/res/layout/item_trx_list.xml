<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="0dp"
    >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/item_margin_trxlist"
        android:paddingLeft="@dimen/item_margin_trxlist"
        android:paddingRight="@dimen/item_margin_trxlist"
        android:background="@color/backgroundPayment"
        >

        <ImageView
            android:id="@+id/itemIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="@dimen/item_margin_trxlist"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_top_up" />
        <TextView
            android:id="@+id/itemAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="Rp 100.000"
            android:layout_marginBottom="@dimen/item_trxlist_text_vspacing"
            />
        <TextView
            android:id="@+id/itemDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/itemAmount"
            android:text="Today"
            android:gravity="bottom"
            android:layout_marginBottom="@dimen/item_margin_trxlist"
            />
        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/itemIcon"
            android:layout_toRightOf="@id/itemIcon"
            android:text="Top Up"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/item_margin_trxlist"
            />
        <ImageView
            android:id="@+id/itemStatus"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignTop="@id/itemTitle"
            android:layout_alignBottom="@id/itemTitle"
            android:layout_toRightOf="@id/itemTitle"
            android:foregroundGravity="left"
            app:srcCompat="@drawable/ic_check_circle"
            android:tint="@color/green_800"
            android:layout_marginLeft="@dimen/item_grid_vspacing"
            />
        <TextView
            android:id="@+id/itemMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Top up berhasil"
            android:layout_below="@id/itemTitle"
            android:layout_toEndOf="@id/itemIcon"
            android:layout_toRightOf="@id/itemIcon"
            android:layout_toStartOf="@id/itemDate"
            android:layout_toLeftOf="@id/itemDate"
            android:layout_marginLeft="@dimen/item_margin_trxlist"
            android:layout_marginRight="@dimen/item_margin_trxlist"
            android:layout_marginBottom="@dimen/item_margin_trxlist"
            android:paddingTop="@dimen/item_trxlist_text_vspacing"
            android:gravity="bottom"
            />
        <View
            android:id="@+id/itemBorder"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>