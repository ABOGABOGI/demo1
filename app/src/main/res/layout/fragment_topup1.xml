<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/activity_padding"
    android:paddingRight="@dimen/activity_padding"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/activity_padding"
        >
        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bank_bni"
            />

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textTitle"
            android:text="BNI Virtual Account"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_holder_name"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/activity_view_double_vspacing"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demo Agung"
        android:textColor="@android:color/black"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/virtual_account_number"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/activity_view_double_vspacing"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80293477711222"
        android:textColor="@android:color/black"
        android:layout_marginBottom="@dimen/activity_view_double_vspacing"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:elevation="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/cardAtm"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_padding"
            android:background="@drawable/rec_box_header"
            >
            <TextView
                android:id="@+id/textAtm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ATM BNI"
                android:textColor="@android:color/black"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_expand_more"
                android:tint="@color/colorPrimary"
                android:id="@+id/imageAtm"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <com.solarnet.demo.view.BorderFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftBorderColor="@color/colorPrimary"
        app:leftBorderWidth="1dp"
        app:topBorderColor="@android:color/transparent"
        app:topBorderWidth="0dp"
        app:rightBorderColor="@color/colorPrimary"
        app:rightBorderWidth="1dp"
        app:bottomBorderColor="@color/colorPrimary"
        app:bottomBorderWidth="1dp"
        android:id="@+id/layoutAtmContent"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/textAtmContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="@dimen/activity_padding"
            />
    </com.solarnet.demo.view.BorderFrameLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:elevation="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/cardMobile"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_padding"
            android:background="@drawable/rec_box_header"
            >
            <TextView
                android:id="@+id/textMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ATM BNI"
                android:textColor="@android:color/black"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_expand_more"
                android:tint="@color/colorPrimary"
                android:id="@+id/imageMobile"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <com.solarnet.demo.view.BorderFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftBorderColor="@color/colorPrimary"
        app:leftBorderWidth="1dp"
        app:topBorderColor="@android:color/transparent"
        app:topBorderWidth="0dp"
        app:rightBorderColor="@color/colorPrimary"
        app:rightBorderWidth="1dp"
        app:bottomBorderColor="@color/colorPrimary"
        app:bottomBorderWidth="1dp"
        android:id="@+id/layoutMobileContent"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/textMobileContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="@dimen/activity_padding"
            />
    </com.solarnet.demo.view.BorderFrameLayout>

</LinearLayout>