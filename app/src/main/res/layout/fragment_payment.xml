<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroundPayment"
        android:layout_gravity="left"
        android:gravity="left"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_height"
            android:background="@color/white"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:verticalSpacing="@dimen/item_grid_vspacing"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                />
            <RelativeLayout
                android:id="@+id/layoutBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_rrect_layout"
                android:layout_margin="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="6dp"
                >
                <TextView
                    android:id="@+id/textLabel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorAccent"
                    android:text="Balance : "
                    android:layout_alignParentLeft="true"
                    android:textSize="16sp"
                    />
                <android.support.v7.widget.CardView
                    android:id="@+id/buttonTopUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="6dp"
                    android:layout_alignParentRight="true"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:minWidth="80dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/top_up"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:gravity="center"
                        />
                </android.support.v7.widget.CardView>
                <TextView
                    android:id="@+id/textBallance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorAccent"
                    android:text="Rp. 1.200.000"
                    android:layout_toLeftOf="@id/buttonTopUp"
                    android:layout_toRightOf="@id/textLabel1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/fab_margin"
                    />
            </RelativeLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/cardViewAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/backgroundPayment"
            app:cardElevation="0dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >
            <TextView
                android:id="@+id/textViewAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:text="@string/view_all"
                android:textColor="@color/colorAccent"
                android:paddingTop="@dimen/item_margin_trxlist"
                android:paddingBottom="@dimen/item_margin_trxlist"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/item_margin_trxlist"
                />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>