<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.payment.CellularActivity"
    tools:showIn="@layout/activity_celullar"
    android:padding="@dimen/activity_padding"
    >
    <LinearLayout
        android:id="@+id/layoutPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <EditText
            android:id="@+id/editPhone"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="Input Phone Number"
            android:layout_marginLeft="@dimen/activity_padding"
            android:inputType="numberDecimal"
            />

        <ImageButton
            android:id="@+id/buttonPhonebook"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_search"
            android:tint="@android:color/black"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="@id/buttonPhonebook"
            app:layout_constraintRight_toRightOf="parent"
            />
    </LinearLayout>


    <co.ceryle.segmentedbutton.SegmentedButtonGroup
        android:id="@+id/segmentedButtonGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:sbg_animateSelector="fastOutSlowIn"
        app:sbg_animateSelectorDuration="500"
        app:sbg_backgroundColor="@color/purple_200"
        app:sbg_borderColor="@color/colorPrimary"
        app:sbg_borderSize="1dp"
        app:sbg_dividerColor="@color/colorPrimary"
        app:sbg_dividerPadding="10dp"
        app:sbg_dividerRadius="10dp"
        app:sbg_dividerSize="0dp"
        app:sbg_position="0"
        app:sbg_radius="2dp"
        app:sbg_ripple="true"
        app:sbg_rippleColor="@android:color/darker_gray"
        app:sbg_selectorBackgroundDrawable="@drawable/gradient_drawable_selector"
        app:sbg_selectorColor="@color/colorPrimary"

        app:layout_constraintTop_toBottomOf="@id/layoutPhone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        >

        <co.ceryle.segmentedbutton.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:sb_text="@string/pulsa"
            app:sb_textSize="18sp"
            app:sb_textColor="@color/purple_300"
            app:sb_textColor_onSelection="@color/white"
            app:sb_textStyle="bold"
            android:padding="2dp"
            />

        <co.ceryle.segmentedbutton.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:sb_text="@string/paket_data"
            app:sb_textSize="18sp"
            app:sb_textColor="@color/purple_300"
            app:sb_textColor_onSelection="@color/white"
            app:sb_textStyle="bold"
            android:padding="2dp"
            />
    </co.ceryle.segmentedbutton.SegmentedButtonGroup>

    <android.support.v7.widget.CardView
        android:id="@+id/cardProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="0dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="@dimen/activity_view_double_vspacing"
        app:layout_constraintTop_toBottomOf="@id/segmentedButtonGroup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@android:style/Widget.Holo.Light.Spinner"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_card_spinner"
            >
            <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_cell_smartfren"
                android:layout_marginRight="@dimen/activity_view_vspacing"
                />
            <ImageView
                android:id="@+id/imageNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_chevron_right_24dp"
                android:tint="@android:color/secondary_text_light"
                />
            <TextView
                android:id="@+id/textHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_pulsa"
                android:minLines="2"
                android:gravity="center_vertical"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/imageNext"
                android:layout_toRightOf="@id/imageIcon"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/text_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remaining_balance"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/cardProduct"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="@dimen/activity_view_double_vspacing"
        android:gravity="bottom"
        />
    <TextView
        android:id="@+id/textBalance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/text_label1"
        app:layout_constraintBottom_toBottomOf="@id/text_label1"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Rp. 0"
        android:paddingLeft="@dimen/activity_padding"
        />
</android.support.constraint.ConstraintLayout>