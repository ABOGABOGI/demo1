<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/item_margin_chatlist"
            android:paddingLeft="@dimen/item_margin_chatlist"
            android:paddingTop="@dimen/item_margin_chatlist"
            android:paddingBottom="@dimen/item_margin_chatlist"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemPrice"
                    android:text="Rp 10.000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="16dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/item_margin_chatlist"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemDescription"
                    android:gravity="center_vertical|left"
                    android:text="Nasi Goreng"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/itemPrice"
                    android:textSize="@dimen/text_chat"
                    android:minLines="2"
                    android:maxLines="2"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/item_margin_chatlist"
                    />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>