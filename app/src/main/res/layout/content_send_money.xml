<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.payment.SendMoneyActivity"
    tools:showIn="@layout/activity_send_money"
    android:padding="@dimen/activity_padding"
    >

    <TextView
        android:id="@+id/text_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recipient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:paddingBottom="@dimen/activity_view_vspacing"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/profile_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_label1"
        app:civ_border_color="@android:color/darker_gray"
        app:civ_border_width="1dp"
        app:civ_border_overlay="true"
        android:paddingRight="@dimen/activity_view_vspacing"
        />

    <ImageButton
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_cancel"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="@id/imageIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageIcon" />
    <EditText
        android:id="@+id/editSelectedContact"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/imageIcon"
        app:layout_constraintBottom_toBottomOf="@id/imageIcon"
        app:layout_constraintLeft_toRightOf="@id/imageIcon"
        app:layout_constraintRight_toLeftOf="@id/buttonCancel"
        android:textSize="16sp"
        android:maxLines="1"
        android:text="Nugroho Priambodo"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <EditText
        android:id="@+id/editContact"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imageIcon"
        app:layout_constraintTop_toBottomOf="@id/text_label1"
        android:hint="@string/hint_recipient"
        android:visibility="gone"
        android:textSize="20sp"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <TextView
        android:id="@+id/text_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remaining_balance"
        app:layout_constraintTop_toBottomOf="@id/editSelectedContact"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:paddingBottom="@dimen/activity_view_vspacing"
        android:gravity="bottom"
        android:paddingTop="@dimen/activity_view_double_vspacing"
        />
    <TextView
        android:id="@+id/textBallance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp. 10.000"
        app:layout_constraintTop_toBottomOf="@id/text_label2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/text_label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_money_amount"
        app:layout_constraintTop_toBottomOf="@id/textBallance"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:paddingBottom="@dimen/activity_view_vspacing"
        android:gravity="bottom"
        android:paddingTop="@dimen/activity_view_double_vspacing"
        />

    <EditText
        android:id="@+id/editAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_label3"
        android:text="Rp. 5.000"
        android:textSize="32sp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/recyclerNumPad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editAmount"
        app:layout_constraintBottom_toBottomOf="parent"
        android:foregroundGravity="top"
        android:paddingTop="@dimen/activity_view_vspacing"
        />
</android.support.constraint.ConstraintLayout>